<%= form_with(model: @event, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :event_name %>

    <%= f.text_field :event_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :start_datetime %>
    <%= f.datetime_select :start_datetime, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_datetime %>
    <%= f.datetime_select :end_datetime, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :location %>

    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :photo %>

    <%= f.file_field :photo, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <%= f.submit "Create event", class: "btn btn-block btn-outline-secondary" %>
<% end %>
