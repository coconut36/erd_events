<%= form_with(model: @rsvp, local: true) do |f| %>

  <%= f.hidden_field :users_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :events_id %>

    <%= f.collection_select :events_id, Event.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :response %>

    <%= f.text_field :response, class: "form-control" %>
  </div>

  <%= f.submit "Create rsvp", class: "btn btn-block btn-outline-secondary" %>
<% end %>
