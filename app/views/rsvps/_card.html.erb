<div class="card mb-3">
  <h2 class="card-header h4">
    Rsvp #<%= rsvp.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Users</dt>
      <!-- Display users_id start -->
      <dd>
        <% if @rsvp.user.present? %>
          <%= link_to rsvp.user, rsvp.user %>
        <% end %>
      </dd>
      <!-- Display users_id end -->

      <dt>Events</dt>
      <!-- Display events_id start -->
      <dd>
        <% if @rsvp.event.present? %>
          <%= link_to rsvp.event, rsvp.event %>
        <% end %>
      </dd>
      <!-- Display events_id end -->

      <dt>Response</dt>
      <!-- Display response start -->
      <dd><%= rsvp.response %></dd>
      <!-- Display response end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back rsvp, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link rsvp start -->
      <div class="col">
        <%= link_to edit_rsvp_url(rsvp), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link rsvp end -->

      <!-- Delete link rsvp start -->
      <div class="col">
        <%= link_to rsvp, method: :delete, data: { confirm: "Do you really want to delete this rsvp?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link rsvp end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(rsvp.updated_at) %> ago
  </div>
</div>
